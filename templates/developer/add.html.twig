{% extends 'base.html.twig' %}

{% block body %}
    <h1>Добавить разработчика</h1>

    <p>Пожалуйста, заполните форму ниже, чтобы добавить нового разработчика в систему.</p>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(form.surname, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.surname) }}
    </div>
    <div class="form-group">
        {{ form_label(form.fullname, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.fullname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.fullname) }}
    </div>
    <div class="form-group">
        {{ form_label(form.birthdate, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.birthdate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.birthdate) }}
    </div>
    <div class="form-group">
        {{ form_label(form.position, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.position) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.phone) }}
    </div>
    <button class="btn btn-success">Добавить разработчика</button>
    {{ form_end(form) }}

    <p><a href="{{ path('developers_list') }}" class="btn btn-secondary">Вернуться к списку разработчиков</a></p>

    {# Отображение ошибок валидации #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            <strong>Обнаружены ошибки:</strong>
            <ul>
                {% for error in form.vars.errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}